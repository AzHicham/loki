

FROM debian:buster-slim

# copy package from context inside the docker
COPY ./tmp/navitia-ed_*.deb /
COPY ./tmp/navitia/source/ /navitia/source/
COPY ./docker/bina.sh /bina.sh

# install dependencies
RUN apt-get update
RUN apt-get install -y python3 python3-pip libpq-dev jq git zip curl

# install navitia-ed package
RUN apt-get install -y /navitia-ed_*.deb

# install eitri requirements
RUN pip3 install --no-cache-dir -r /navitia/source/eitri/requirements.txt

# install dasal ! A tool comparable to jq, but supports JSON, YAML, TOML.
RUN curl -sSLf "https://github.com/TomWright/dasel/releases/download/v1.24.3/dasel_linux_arm64" -L -o dasel \
      && chmod +x dasel \
      && mv ./dasel /usr/local/bin/dasel

RUN chmod +x /bina.sh

VOLUME /storage

CMD ["/bina.sh"]
